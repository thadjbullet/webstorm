<toolSet name="External Tools">
  <tool name="Prettify" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="prettier-eslint" />
      <option name="PARAMETERS" value="--single-quote --print-width 80 --trailing-comma &quot;es5&quot; --jsx-bracket-same-line --write $FileDirRelativeToProjectRoot$/$FileNameWithoutAllExtensions$(*.js|*.jsx)" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>